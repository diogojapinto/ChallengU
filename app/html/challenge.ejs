<link rel="stylesheet" type="text/css" href="../css/star-rating.min.css">

<h1><%= challenge.name %></h1>
<div class="container">
    <h6>Creator:</h6><a href="#"><%= challenge.creator></a>
    <input type="number" class="rating" min=1 max=5 step=0.1 readonly="true" showClear="false"
           value="<%= challenge.rating %>"/>

    <div class="container">
        <%= challenge.description %>
    </div>
</div>

<div class="col-md-4 col-sm-6">
    <% challenge.responses.forEach(function(response) { %>
    <div class="container">
        <a href="#"><%= response.username %></a>

        <p><%= response.content %></p>
        <input type="number" class="rating" size="xs" min=1 max=5 step=0.1 data-readonly="true" data-show-clear="false"
               value="<%= response.rating %>"/>
    </div>
    <% }); %>
</div>
<div class="col-md-12 col-sm-6">
    <% challenge.comments.forEach(function(comment) { %>
    <div class="col-md-1">
        <a href="#"><%= comment.username %></a>
        <p><%comment.content %></p>
    </div>
    <% }); %>
</div>

<script type="text/javascript" src="../js/star-rating.min.js"></script>
<script type="text/javascript" src="../js/jquery.min.js"></script>