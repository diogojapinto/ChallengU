<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
    <link rel="stylesheet" type="text/css" href="/css/tabs.css">
</head>
<body>
<% include partials/header %>

<div class="container" ng-app="connect-app">
    <section>
        <div class="container vertical-offset-20">
            <div class="row">
                <div class="board">
                    <div class="board-inner">
                        <div class="col-md-6 col-md-offset-3 col-sm-12">
                            <ul class="nav nav-tabs" id="myTab">
                                <div class="liner"></div>
                                <li class="active">
                                    <a title="Login" href="#login" data-toggle="tab" title="Login">
                      <span class="round-tabs one">
                              <i class="fa fa-key"></i>
                      </span>
                                    </a></li>

                                <li><a title="Register" href="#register" data-toggle="tab" title="Register">
                     <span class="round-tabs two">
                         <i class="fa fa-edit"></i>
                     </span>
                                    </a>
                                </li>

                                <li><a title="Facebook" href="#facebook" data-toggle="tab" title="Connect With Facebook">
                     <span class="round-tabs three">
                          <i class="fa fa-facebook"></i>
                     </span> </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="login">
                            <% include login %>
                        </div>

                        <div class="tab-pane fade in" id="register">
                            <% include register %>
                        </div>

                        <div class="tab-pane fade in" id="facebook">
                            <% include facebook %>
                        </div>

                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

<% include partials/footer %>

<% include partials/scripts %>
<script type="text/javascript" src="/js/app-connect.js"></script>
<script type="text/javascript" src="/js/app-register.js"></script>
<script type="text/javascript" src="/js/app-login.js"></script>
<script type="text/javascript" src="/js/app-forgot.js"></script>
<% include partials/global-app-scripts %>
</body>
</html>