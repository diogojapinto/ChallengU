<!DOCTYPE html>
<html>
<head lang="en">
    <% include partials/head %>
</head>
<body ng-app="challenge-app">
<% include partials/header %>

<div class="container" style="width:100%" ng-controller="ChallengeSubmit as chalg">
    <div class="row vertical-offset-100">
        <h1 style="text-align: center" class="text-primary">Create a challenge!</h1>

        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row-fluid user-row">
                        <img src="../images/postit.png"
                             style="width:40%;height:40%" class="img-responsive"
                             alt="Console Admin"/>
                    </div>
                </div>
                <form method="get">

                    <input class="form-control" ng-model="formData.name" type="text"
                           placeholder="Your challenge name" required>

                    <h3 class="text-warning">Categories</h3>
                    <span style="padding-left: 0.2em">
                        <tags-input ng-model="formData.tags" class="catChooser">
                            <auto-complete source="getCategories($query)" min-length="2"></auto-complete>
                        </tags-input>
                    </span>

                    <h3 class="text-warning">Proof type</h3>

                    <div class="styled-select">
                        <select ng-model="formData.type"
                                ng-options="option for option in chalg.challengeTypes">

                        </select>
                    </div>

                    <h3 class="text-warning">Difficulty</h3>
                    <input ng-model="formData.difficulty" type="range" value="3" step="1" min="1" max="5"
                           data-show-value="true" data-popup-enabled="true">

                    <div style="text-align: center">{{formData.difficulty}}</div>

                    <textarea class="form-control" placeholder="Your description of the challenge" require
                              ng-model="formData.description"></textarea>

                    <div style="text-align: center">
                        <button style="width:95%" class="btn btn-sky btn-lg text-uppercase" type="submit" ng-click="createChallenge()">
                            Post
                            your Challenge!
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>
<% include partials/scripts %>
<script src="/js/app-post-challenge.js"></script>
<script src="/js/ng-tags-input.min.js"></script>
</body>
</html>
