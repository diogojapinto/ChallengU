<div ng-controller="RegisterController as registerCtrl">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row-fluid user-row">
                        <img src="../images/register-icon.png" style="width:30%;height:30%" class="img-responsive"
                             alt="Console Admin"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" name="registerForm">
                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon push-right">
                                            First Name
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.firstName" type="text"
                                       placeholder="Please enter your first name" required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            Last Name
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control col-md-10" ng-model="formData.lastName" type="text"
                                       placeholder="Please enter your last name" required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            Username
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.username" type="text"
                                       pattern=".{5,}"
                                       placeholder="Please enter your username (must be greater than 4 chars)"
                                       required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            E-mail
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.email" type="text"
                                       pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                                       placeholder="Please enter your e-mail"
                                       required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon push-left">
                                            Job
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.work" type="text"
                                       placeholder="What do you do for a living?" required/>
                            </div>
                        </div>
                        <br>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            Location
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.local" type="text"
                                       placeholder="Where do you live?" required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            Password
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.password" type="password"
                                       pattern=".{7,}"
                                       placeholder="Please enter your password (must be greater than 6 chars)"
                                       required/>
                            </div>
                        </div>
                        <br/>

                        <div class="form-group">
                            <div class="col-md-2">
                                        <span class="input-group-addon">
                                            Confirm
                                        </span>
                            </div>
                            <div class="col-md-10">
                                <input class="form-control" ng-model="formData.confirmPassword" type="password"
                                       pattern=".{7,}"
                                       placeholder="Please confirm your password (must be greater than 6 chars)"
                                       required/>
                            </div>
                        </div>
                        By clicking <strong class="label label-primary">Register</strong>,
                        you agree to the <span id="termsLink" data-toggle="modal" data-target="#terms"><strong
                                    class="label label-primary">Terms and
                                Conditions</strong></span> set out by this site, including our Cookie Use.
                        <br/>
                        <button class="btn btn-block btn-lg btn-primary" type="submit" ng-click="register()">
                            Register now!
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="terms" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" sg>
                    <button type="button" class="close" data-dismiss="modal"><span
                                aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Terms and Conditions</h4>
                </div>
                <div class="modal-body">
                    <p> Bla bla bla</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal -->
</div>