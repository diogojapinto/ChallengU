<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
</head>

<body>
<% include partials/header %>
<div class="container">
    <section>
        <div class="container vertical-offset-100">
            <div class="board">
                <div class="board-inner">

                    <section class="col-xs-12 col-sm-6 col-md-12">
                        <% if (challenges != null) {
                                challenges.forEach(function(value) { %>
                        <article class="search-result row" style="background-color: #2b3e50">
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <a href="#" title="Lorem ipsum" class="thumbnail"><img
                                            src="http://lorempixel.com/400/200/" alt="Lorem ipsum"/></a>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-2">
                                <ul class="meta-search">
                                    <li><i class="glyphicon glyphicon-calendar"></i> <span>02/15/2014</span></li>
                                    <li><i class="glyphicon glyphicon-time"></i> <span>4:28 pm</span></li>
                                    <li><i class="glyphicon glyphicon-tags"></i> <span>People</span></li>
                                    <li>

                                        <% for (var i = 0; i < value.difficulty;i++) { %>
                                        <span class="fa fa-star"></span>
                                        <% } %>

                                        <% for (var i = 0; i < (5 - value.difficulty);i++) { %>
                                        <span class="fa fa-star-o"></span>
                                        <% } %>
                                    </li>
                                    <li><i class="fa fa-comment"></i> <%= value.ncomments %></li>
                                </ul>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-7 excerpet">
                                <h3><a href="#" title=""><%= value.name %></a></h3>

                                <p><%= value.content %></p>
                            </div>
                            <span class="clearfix borda"></span>
                        </article>
                        <% }); } %>

                    </section>
                </div>
            </div>
        </div>
    </section>
</div>
<% include partials/footer %>
<% include partials/scripts %>
<script type="text/javascript" src="../js/util.js"></script>
</body>
</html>