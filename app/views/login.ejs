<div class="container" ng-controller="LoginController as loginCtrl">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row-fluid user-row">
                        <img src="../images/login.png" style="width:30%;height:30%" class="img-responsive"
                             alt="Console Admin"/>
                    </div>
                </div>
                <div class="panel-body">
                    <form name="loginForm">
                        <input class="form-control" ng-model="formData.username" type="text" placeholder="Username"
                               required/>
                        <br/>
                        <input class="form-control" ng-model="formData.password" type="password" placeholder="Password"
                               required/>
                        <br/>
                        <a href="">Forgot your password?</a>
                        <br/>
                        <button class="btn btn-block btn-lg btn-success" ng-disabled="!loginForm.$valid" type="submit"
                                ng-click="login()">
                            Submit
                        </button>
                        <button class="btn btn-block btn-lg btn-danger"
                                ng-show="formData.username || formData.password"
                                type="button"
                                ng-click="resetForm()">
                            Reset
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>